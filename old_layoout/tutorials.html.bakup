        <div class="text-container" id="dynamic-text">
          <!-- Placeholder for dynamic content -->
          <script>
            const content = [
              {
                type: 'text',
	        text: "Exodus 20:8-11 - Remember the sabbath day, too keep it holy. ",
              },
              {
                type: 'image',
                src: 'img/slide1.png',
                alt: 'Banner Image',
                style: 'max-width: 100%; height: auto; display: block; margin-left: auto; margin-right: auto;',
                class: 'dynamic-image'
              },
              {
                type: 'image',
                src: 'img/ghetto.png',
                alt: 'Another Banner Image',
                style: 'max-width: 100%; height: auto; display: block; margin-left: auto; margin-right: auto;',
                class: 'dynamic-image'
              },
              {
                type: 'text',
                text: "Another Bible verse goes here."
              }
            ];

            let currentIndex = 0;
            const textContainer = document.getElementById('dynamic-text');

            function displayContent(index) {
              const item = content[index];
              if (item.type === 'image') {
                textContainer.innerHTML = `<img src="${item.src}" alt="${item.alt}" class="${item.class}" style="${item.style}">`;
              } else {
                textContainer.textContent = item.text;
              }
            }

            function rotateContent() {
              displayContent(currentIndex);
              currentIndex = (currentIndex + 1) % content.length;
            }

            // Call the rotateContent function initially to start the rotation
            rotateContent();

            // Set an interval to call the rotateContent function every few seconds
            setInterval(rotateContent, 7000); // Change 5000 to the desired interval in milliseconds
          </script>
        </div>
      </div>
